
unit ImageForm;

interface

uses
  System.Collections, System.ComponentModel,
  System.Data, System.Drawing, System.Web, System.Web.SessionState,
  System.Web.UI, System.Web.UI.WebControls, System.Web.UI.HtmlControls,
  System.Drawing.Imaging, System.IO;

type
  TImageForm = class(System.Web.UI.Page)
  {$REGION 'Designer Managed Code'}
  strict private
    procedure InitializeComponent;
  {$ENDREGION}
  strict private
    procedure Page_Load(sender: System.Object; e: System.EventArgs);
  strict protected
    procedure OnInit(e: EventArgs); override;
  private
    { Private Declarations }
  public
    { Public Declarations }
  end;

implementation

{$REGION 'Designer Managed Code'}
/// <summary>
/// Required method for Designer support -- do not modify
/// the contents of this method with the code editor.
/// </summary>
procedure TImageForm.InitializeComponent;
begin
  Include(Self.Load, Self.Page_Load);
end;
{$ENDREGION}

procedure TImageForm.Page_Load(sender: System.Object; e: System.EventArgs);
var
  bm: Bitmap;
  im: System.Drawing.Image;
  tni: System.Drawing.Image;
begin
  // Le imagem do disco
  im := System.Drawing.Image.FromFile(
      Request.PhysicalApplicationPath+'j.jpg');
  // Cria um thumbnail (imagem reduzida) da imagem
  tni := im.GetThumbNailImage(50, 60, nil, IntPtr.Zero);
  // Cria arquivo bitmap do thumbnail da imagem
  bm := Bitmap.Create(tni);
  // Salva a imagem no Response da pagina
  bm.Save(Response.OutputStream, ImageFormat.jpeg);
end;

procedure TImageForm.OnInit(e: EventArgs);
begin
  //
  // Required for Designer support
  //
  InitializeComponent;
  inherited OnInit(e);
end;


end.

