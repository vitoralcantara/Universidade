procedure TWebForm1.Button7_Click(sender: System.Object; e: System.EventArgs);
var
preco : double;

begin
preco := 0;

preco := preco + Convert.ToDouble(dropdownlist1.SelectedValue);

preco := preco + Convert.ToDouble(dropdownlist4.SelectedValue);

If RadioButton1.Checked then
preco := preco + 15;

preco := preco + Convert.ToInt32(checkboxlist3.SelectedValue);
preco := preco + Convert.ToInt32(checkboxlist4.SelectedValue);




If Radiobutton3.Checked then
preco := preco + Convert.ToDouble(Dropdownlist5.SelectedValue);

 if CheckBoxList2.Items[0].Selected then preco := preco + 45;
  if CheckBoxList2.Items[1].Selected then preco := preco + 55;
  if CheckBoxList2.Items[2].Selected then preco := preco + 25;

label1.Text := preco.ToString('c');

label4.Text := dropdownlist1.SelectedItem.ToString;
Label5.Text := Checkboxlist1.SelectedItem.ToString;
Label6.text := Dropdownlist4.SelectedItem.ToString;

if Checkboxlist3.Items.Item[0].Selected then
label7.Text := 'leitor de CD/DVD' + dropdownlist6.SelectedItem.ToString
+ checkboxlist4.SelectedItem.ToString;



label8.Text := checkboxlist2.SelectedItem.Text





               








end;

